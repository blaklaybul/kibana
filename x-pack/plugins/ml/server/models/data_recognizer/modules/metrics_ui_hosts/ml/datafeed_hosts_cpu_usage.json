{
    "job_id": "JOB_ID",
    "indices": [
      "INDEX_PATTERN_NAME"
    ],
    "indices_options": {
      "allow_no_indices": true
    },
    "chunking_config": {
      "mode": "manual",
      "time_span": "900s"
    },
    "query": {
      "bool": {
        "must": [
          {
            "exists": {
              "field": "system.cpu"
            }
          }
        ]
      }
    },
    "aggs": {
      "host.name": {
        "terms": {
          "field": "host.name",
          "size": 100
        },
        "aggs": {
          "buckets": {
            "date_histogram": {
              "field": "@timestamp",
              "fixed_interval": "5m"
            },
            "aggs": {
              "@timestamp": {
                "max": {
                  "field": "@timestamp"
                }
              },
              "cpu_user": {
                "avg": {
                  "field": "system.cpu.user.pct"
                }
              },
              "cpu_system": {
                "avg": {
                  "field": "system.cpu.system.pct"
                }
              },
              "cpu_cores": {
                "max": {
                  "field": "system.cpu.cores"
                }
              },
              "cpu": {
                "bucket_script": {
                  "buckets_path": {
                    "user": "cpu_user",
                    "system": "cpu_system",
                    "cores": "cpu_cores"
                  },
                  "script": "(params.user + params.system) / params.cores",
                  "gap_policy": "skip"
                }
              }
            }
          }
        }
      }
    }
  }